
server {
{# Note: the value of nginx_listen_ip should be a list or a string #}
{% if nginx_mailhost_listen_ip is not string and nginx_mailhost_listen_ip is iterable -%}
{% for ip in nginx_mailhost_listen_ip %}
  listen    {{ ip }}:{{ nginx_mailhost_ssl_port }};
{% endfor %}
{% else %}
  listen    {{ nginx_mailhost_listen_ip|default('*') }}:{{ nginx_mailhost_ssl_port }};
{% endif -%}

{# check to see if ipv6 support exists in the kernel before applying #}
{% if nginx_mailhost_ipv6_enable and (ansible_default_ipv6.address is defined) -%}
{# Note: the value of nginx_mailhost_ipv6_listen_ip should be a list or a string #}
{% if nginx_mailhost_ipv6_listen_ip is not string and nginx_mailhost_ipv6_listen_ip is iterable -%}
{% for ipv6 in nginx_mailhost_ipv6_listen_ip %}
  listen [{{ ipv6 }}]:{{ nginx_mailhost_ipv6_ssl_port }} {{ nginx_mailhost_ipv6_listen_options|default('') }};
{% endfor %}
{% else %}
  listen [{{ nginx_mailhost_ipv6_listen_ip|default('::') }}]:{{ nginx_mailhost_ipv6_ssl_port }} {{ nginx_mailhost_ipv6_listen_options|default('') }};
{% endif -%}
{% endif -%}

  server_name           {{ nginx_mailhost_server_name.join(" ") }};
  protocol              {{ nginx_mailhost_protocol }};
  xclient               {{ nginx_mailhost_xclient }};
  auth_http             {{ nginx_mailhost_auth_http }};

  ssl on;
  ssl_certificate      {{ nginx_mailhost_ssl_cert }};
  ssl_certificate_key  {{ nginx_mailhost_ssl_key }};

  ssl_session_timeout  5m;

  ssl_protocols  SSLv3 TLSv1;

  # Suggested from https://wiki.mozilla.org/Security/Server_Side_TLS#Nginx
  ssl_ciphers 'ECDHE-RSA-AES128-GCM-SHA256:ECDHE-ECDSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-ECDSA-AES256-GCM-SHA384:DHE-RSA-AES128-GCM-SHA256:DHE-DSS-AES128-GCM-SHA256:kEDH+AESGCM:ECDHE-RSA-AES128-SHA256:ECDHE-ECDSA-AES128-SHA256:ECDHE-RSA-AES128-SHA:ECDHE-ECDSA-AES128-SHA:ECDHE-RSA-AES256-SHA384:ECDHE-ECDSA-AES256-SHA384:ECDHE-RSA-AES256-SHA:ECDHE-ECDSA-AES256-SHA:DHE-RSA-AES128-SHA256:DHE-RSA-AES128-SHA:DHE-DSS-AES128-SHA256:DHE-RSA-AES256-SHA256:DHE-DSS-AES256-SHA:DHE-RSA-AES256-SHA:AES128-GCM-SHA256:AES256-GCM-SHA384:AES128-SHA:AES256-SHA:AES:CAMELLIA:DES-CBC3-SHA:!aNULL:!eNULL:!EXPORT:!DES:!RC4:!MD5:!PSK:!aECDH:!EDH-DSS-DES-CBC3-SHA:!EDH-RSA-DES-CBC3-SHA:!KRB5-DES-CBC3-SHA';

  ssl_prefer_server_ciphers   on;

}
